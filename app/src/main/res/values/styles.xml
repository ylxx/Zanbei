<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="customDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/sp_waiting_dialog_bg</item>
    </style>

    <style name="item_news_information">
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="tweetText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorLink">#778085</item>
    </style>

    <style name="tweetDate">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFAAAAAA</item>
    </style>

    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/mian_bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="myDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_circle_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="common_button" parent="@style/text_on_button">
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">50.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>
    <style name="text_on_button">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="main_fragment_title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_18sp</item>
    </style>
    <style name="popuShareAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popu_in</item>
        <item name="android:windowExitAnimation">@anim/popu_out</item>
    </style>


    <style name="Theme.ToolBar.ZhiHu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.ZhiHu</item>
    </style>
    <style name="ActionButton.Overflow.ZhiHu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_more_overflow</item>
    </style>




    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>




    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="item_section_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="item_title">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/item_title</item>
    </style>

    <style name="item_secondary_text">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/ss_comment_time</item>
    </style>

    <style name="item_local">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/item_local</item>
        <item name="android:background">@drawable/list_item_local_bg</item>
    </style>

    <style name="item_abstract">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/item_abstract</item>
    </style>

    <style name="item_image">
        <item name="android:background">@drawable/small_image_holder_listpage</item>
        <item name="android:layout_width">@dimen/item_image_width</item>
        <item name="android:layout_height">@dimen/item_image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="item_image_gap">
        <item name="android:layout_width">15.0dip</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="item_comment_content">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/default_text_night</item>
    </style>

    <style name="favorite_del_btn">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/favorite_delete_btn</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/favorite_btn_delete</item>
    </style>

    <style name="dislike_text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/dialog_listpage_text</item>
    </style>

    <style name="PopMenuAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_left_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="list_notify_view">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/list_notify_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_notify</item>
        <item name="android:minHeight">25.0dip</item>
    </style>

    <style name="notify_view_divider">
        <item name="android:background">@color/notify_view_divider</item>
    </style>

    <style name="list_notify_cancel_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/list_notify_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">45.0dip</item>
        <item name="android:text">@string/label_cancel_dislike</item>
    </style>

    <style name="detail_activity">
        <item name="android:background">@color/detail_activity_bg_color</item>
    </style>

    <style name="detail_title_bar_style" parent="@style/title_bar_style">
        <item name="android:background">@drawable/detail_bg_titlebar</item>
    </style>

    <style name="toolbar_action">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:minWidth">44.0dip</item>
        <item name="android:layout_weight">0.0</item>
    </style>

    <style name="toolbar_action_comment">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">@color/action_comment_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/action_comment_bg</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">-6.0dip</item>
        <item name="android:maxWidth">44.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title_bar_style">
        <item name="android:background">@color/all_title</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="detail_back_view" parent="@style/back_view">
        <item name="android:background">@drawable/transparent</item>
        <item name="android:drawableLeft">@drawable/btn_back_detail</item>
    </style>

    <style name="back_view" parent="@style/title_bar_button">
        <item name="android:gravity">right|center</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:minHeight">44.0dip</item>
        <item name="android:text">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/btn_back</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>

    <style name="title_bar_button" parent="@style/common_button">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/btn_common_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">17.0dip</item>
        <item name="android:paddingRight">17.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="deail_title_text_style" parent="@style/title_text_style">
        <item name="android:textColor">@color/detail_title_text_color</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="full_image_progress_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="full_image_retry_text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="full_image_progressbar" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large_holo</item>
    </style>

    <style name="subscribe_my_tip_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/subscribe_tip_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="subscribe_seperate_line">
        <item name="android:background">@color/subscribe_seperate_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:layout_marginTop">14.0dip</item>
        <item name="android:layout_marginBottom">14.0dip</item>
    </style>

    <style name="subscribe_more_tip_text" parent="@style/subscribe_my_tip_text">
        <item name="android:textSize">13.0sp</item>
    </style>





</resources>
