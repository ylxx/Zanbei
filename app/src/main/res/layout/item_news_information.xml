<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">
    <!--cardMaxElevation：最大卡片阴影的宽度-->
    <!--cardElevation:卡片阴影的宽度-->
    <!--cardBackgroundColor:卡片的背景颜色-->
    <!--cardCornerRadius ：卡片的圆角半径-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/tweetAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/def_head"
            android:layout_marginLeft="@dimen/smallSpace"
            android:layout_marginRight="@dimen/smallSpace"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tweetName"
            style="@style/item_news_information"
            android:layout_marginBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_16sp"
            android:text="Chad"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tweetName"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/tweetText"
            style="@style/tweetText"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:textColor="@android:color/darker_gray"
            android:text="Hello"
            android:src="@drawable/friend_icon_message"
            />
        <ImageView
            android:id="@+id/tweetText1"
            style="@style/tweetText"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="@dimen/default_5dp"
            android:textColor="@android:color/darker_gray"
            android:text="Hello"
            android:src="@drawable/icon_eye"/>
        <ImageView
            android:id="@+id/tweetText2"
            style="@style/tweetText"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="@dimen/default_5dp"
            android:textColor="@android:color/darker_gray"
            android:text="Hello"
            android:src="@drawable/icon_wallet_balance_small"/>
    </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>